doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Dashboard UI
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script.
      $(function() {
        $('#create-fee-btn').click(function() {
          $('#content').hide();
          $('#create-form').show();
        });
        $('#payment-list-link').click(function() {
          $('#content').hide();
          $('#payment-table').show();
        });
      });
  body
    header
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        a.navbar-brand(href="#") StudFee
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse#navbarNav
          ul.navbar-nav.ml-auto
            li.nav-item.active
              a.nav-link(href="./dashboard") Home
              span.sr-only (current)
            li.nav-item
              a.nav-link#create-fee-btn(href="/create-form") Create Fee
            li.nav-item
              a.nav-link#payment-list-link(href="/admin/paymentlist") Levy List
            li.nav-item
              form(action="/logout", method="post")
                button.btn.btn-primary.nav-item Logout
    section.container
      .container.my-5
        .row.justify-content-center
          .col-lg-6.col-md-8
            .card.shadow.border-0.rounded-lg.mt-5
              .card-body
                form(method='POST', action='/create-form')
                  .mb-3
                    label(for='name') Department Name
                    input#name.form-control(name='departmentName', type='name', placeholder='Computer Sceince', required)
                  .mb-3
                    label(for='name') Levy Name
                    input#name.form-control(name='levyName', type='name', placeholder='Department Fee', required)
                  .mb-3
                    label(for='name') Fee Amount
                    input#name.form-control(name='feeAmount', type='number', placeholder='#1500', required)
                  .mb-3
                    button.btn.btn-primary.btn-block(type='submit') Create
                  if errors
                    ul
                      each error in errors
                        li= error.msg
    footer.footer.py-3
      p.text-center Copyright Â© 2023
